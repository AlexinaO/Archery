@model Archery.Models.Archer
@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
    ViewBag.Title = "Inscription";
}

@section SectionTitle
{
    Nouveau tireur
}



@*<form role="form" method="post" >*@



@using (Html.BeginForm())
{
    @*@Html.ValidationSummary(null, new {  @class="alert alert-danger"})*@

    <div class="form-group">
        @Html.LabelFor(x => x.FirstName, new { @class = "control-label" })
        @Html.EditorFor(x => x.FirstName, new { htmlAttributes = new { @class = "form-control" } }) @*permet d'avoir un form-control dans les input*@
        @Html.ValidationMessageFor(x => x.FirstName, null, new { @class = "text-danger" })

    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.LastName, new { @class = "control-label" })
        @Html.EditorFor(x => x.LastName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.LastName, null, new { @class = "text-danger" })

    </div>


    <div class="form-group">
        @*<label class="control-label" for="InputEmail">Email address</label>*@
        @Html.LabelFor(x => x.Mail, new { @class = "control-label" })
        @*<input type="email" name="email" class="form-control" id="InputEmail" placeholder="Entrez votre e-mail">*@
        @Html.EditorFor(x => x.Mail, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Mail, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Password, new { @class = "control-label" })
        @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.ConfirmedPassword, new { @class = "control-label" })
        @Html.EditorFor(x => x.ConfirmedPassword, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.ConfirmedPassword, null, new { @class = "text-danger" })

    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.BirthDate, new { @class = "control-label" })
        @Html.EditorFor(x => x.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.BirthDate, null, new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.LicenseNumber, new { @class = "control-label" })
        @Html.EditorFor(x => x.LicenseNumber, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(x => x.LicenseNumber, null, new { @class = "text-danger" })

    </div>



    <button type="submit" class="btn btn-default">OK</button>
}

